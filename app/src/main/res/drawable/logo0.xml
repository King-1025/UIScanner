<?xml version= "1.0" encoding ="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape android:shape="rectangle" >
            <solid android:color="#0000001E" />
            <corners android:radius="10dp" />
			<size
				android:width="100dp"
				android:height="100dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FF0000" />
            <corners android:radius="25dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item >

	<item>
		<shape android:shape="ring"
			android:innerRadiusRatio="2.8"
			android:thicknessRatio="9"
			android:useLevel="false">
			<stroke
				android:width="1dp"
				android:color="#FFFF00" />
			<gradient
				android:angle="90"
				android:gradientRadius="200"
				android:startColor="#FF7D00"
				android:centerColor="#FFFF00"
				android:endColor="#FF7D00"
				android:type="sweep" />
			<padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
		</shape>
    </item >
	<item>
		<shape android:shape="oval">  
			<stroke
				android:width="8dp"
				android:color="#FF7D00"
				android:dashWidth="4dp"
				android:dashGap="2dp"/>
			<gradient
				android:angle="45"
				android:gradientRadius="80"
				android:startColor="#FF0000"
				android:centerColor="#FFFF00"
				android:endColor="#FF7D00"
				android:type="radial" />
		</shape>
	</item>
</layer-list>
